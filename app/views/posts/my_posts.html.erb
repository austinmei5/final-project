<div>
  <div>
    <h1>
      <%= @current_user.username %>'s posts
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Category
        </th>

        <th>
          Title
        </th>

        <th>
          Author
        </th>

        <th>
          Created
        </th>

        <th>
          Updated
        </th>
      </tr>

      <% @my_posts.order(:created_at => :desc).each do |a_post| %>
      <tr>
        <td>
          <%= a_post.category.name %>
        </td>

        <td>
          <a href="/posts/<%= a_post.id %>">
            <%= a_post.title %>
          </a>
        </td>

        <td>
          <a href="<%= a_post.author.facebook_account %>" target="_blank">
            <%= a_post.author.username %>
          </a>
        </td>

        <td>
          <%= time_ago_in_words(a_post.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_post.updated_at) %> ago
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
