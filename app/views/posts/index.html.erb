<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Category
        </th>

        <th>
          Title
        </th>

        <th>
          Author
        </th>

        <th>
          Created
        </th>

        <th>
          Updated
        </th>
      </tr>

      <% @list_of_posts.where(:active_status => :true).order(:created_at => :desc).each do |a_post| %>
      <tr>
        <td>
          <%= a_post.category.name %>
        </td>

        <td>
          <a href="/posts/<%= a_post.id %>">
            <%= a_post.title %>
          </a>
        </td>

        <td>
          <a href="<%= a_post.author.facebook_account %>" target="_blank">
            <%= a_post.author.username %>
          </a>
        </td>

        <td>
          <%= time_ago_in_words(a_post.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_post.updated_at) %> ago
        </td>
      </tr>
      <% end %>
    </table>
